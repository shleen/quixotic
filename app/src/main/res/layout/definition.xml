<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp"
    android:layout_marginVertical="10dp"

    android:orientation="horizontal"
    android:background="@color/colorLightestTransparent">

    <View
        android:id="@+id/bar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/word_type"
        android:layout_alignBottom="@+id/definition"
        android:background="@color/colorMain"

        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/word_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing text for word_type"
        android:textSize="16sp"

        android:layout_toRightOf="@id/bar"
        android:layout_toEndOf="@id/bar"/>

    <TextView
        android:id="@+id/definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="Testing text for definition"
        android:layout_below="@id/word_type"
        android:textSize="18sp"

        android:layout_toRightOf="@id/bar"
        android:layout_toEndOf="@id/bar"/>

</RelativeLayout>
