<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:layout_marginVertical="10dp"

    android:orientation="horizontal"
    android:background="@color/colorLightestTransparent">

    <View
        android:id="@+id/bar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/text_holder"
        android:layout_alignBottom="@+id/text_holder"
        android:background="@color/colorMain"

        android:layout_marginEnd="10dp" />

    <RelativeLayout
        android:id="@+id/text_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bar"
        android:orientation="vertical"
        android:layout_marginVertical="20dp">

        <TextView
            android:id="@+id/word_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing text for word_type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing text for definition"
            android:layout_below="@id/word_type"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing text for example"
            android:layout_below="@id/definition"
            android:textColor="@color/colorLightGrey"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
