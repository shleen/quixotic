<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:cardBackgroundColor="#FFFFFF"

    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:onClick="openAddNoteDialog"
        android:background="@drawable/note_card_shape"
        android:layout_marginTop="6dp">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_add"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#00FFFFFF"
            app:iconTint="@color/colorDarkest"
            android:stateListAnimator="@null"
            android:paddingTop="0dp"
            app:iconSize="24dp"
            android:onClick="openAddNoteDialog"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_add_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a note"
                android:textSize="16dp"
                android:textColor="@color/colorDarkest" />

            <TextView
                android:id="@+id/txt_add_note_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from a book, a friend, anything!"
                android:textSize="12dp"
                android:textColor="@color/colorDarkest" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>