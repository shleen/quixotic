<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_shape"
    android:paddingTop="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Enjoying Quixotic?"
        android:textColor="@color/colorDarkest"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Your support lets me do what I love - develop Quixotic. Watching an ad takes less than a minute &amp; enables me to continue."
        android:textColor="@color/colorDarkest"
        android:textSize="16sp"
        android:lineHeight="24sp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/title"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No :("
            android:layout_marginHorizontal="20dp"
            android:background="#00000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yes"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch an ad"
            android:layout_toRightOf="@id/btn_no"
            android:layout_marginHorizontal="20dp"
            android:background="#00000000"
            android:textColor="@color/colorMain"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </RelativeLayout>

</RelativeLayout>