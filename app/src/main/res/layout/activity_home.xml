<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
        android:id="@+id/word_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView>

    <!-- Note: this element MUST be the last element in this group -->
    <com.shleen.quixotic.MovableFloatingActionButton
        android:id="@+id/toggle_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorLightest"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:src="@drawable/ic_sort"

        app:fabSize="normal"
        app:backgroundTint="@color/colorDarkest"/>

</FrameLayout>