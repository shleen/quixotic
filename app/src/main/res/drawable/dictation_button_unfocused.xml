<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/colorDarkestTransparent" />
        </shape>
    </item>

    <!--Actual button-->
    <item android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/colorLighterest" />
        </shape>
    </item>

    <item>
        <inset android:drawable="@drawable/ic_speaker" android:inset="8dp" />
    </item>
</layer-list>

